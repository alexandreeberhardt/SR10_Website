<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="/stylesheets/offre.css" rel="stylesheet" type="text/css" />
        <title><%= title %></title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        
        <script>
            $(document).ready(function(){
                $("#a1").click(function(){
                    window.location.href = "apply.html";
                });
            });
            $(document).ready(function(){
                $("#a2").click(function(){
                    window.location.href = "apply.html";
                });
            });
            $(document).ready(function(){
                $("#a3").click(function(){
                    window.location.href = "apply.html";
                });
            });
        </script>

    </head>
    <body>
        <div class="topbar">
            <div class="left-side">

                <a class="link-wrapper link" href="" >
                    <div class="button button-home">
                        <img class="img-topbar"  src="../assets/home.png">
                        <p>Home</p>
                    </div>
                </a>
            
            </div>
            <div class="right-side">
                <a class="link" href="/users/candidatures">
                    <div class="button button-candidat">
                        <img class="img-topbar" src="../assets/candidatures.png">
                        <p>Mes candidatures</p>
                    </div>
                </a>
                <a class="link" href="/users/account">
                    <div class="button account">
                        <img class="img-topbar" src="../assets/account.png">
                        <p>Mon compte</p>
                    </div>
                </a>
                
            </div>
        </div>
        <div class="main-page">
            <div class="left-side-main">
                <div class="header-left-side">
                    <h1>Voir les offres</h1>
                    <h3>Cherchez les offres d'emploi pertinentes pour vous !</h3>
                    <input placeholder="Search..." class="search-input" type="text">
                    <br>
                    <table class="Offre_table">
                        <tr>
                          <th class="offre_th" class="offre_row" >Intitule</th>
                          <th class="offre_th">Rythme de travail</th>
                          <th class="offre_th">Salaire min</th>
                          <th class="offre_th">Salaire max</th>
                          <th class="offre_th">Métier</th>
                          <th class="offre_th">Organisation</th>
                          <th class="offre_th">Pays</th>
                        </tr>
                        <% result.forEach((res)=> { %>
                            <tr class="row-clickable" id="a1">
                                <td class="offre_row"><%= res.intitule  %></td>
                                <td><%= res.rythme_travail %></td>
                                <td><%= res.salaire_min %></td>
                                <td><%= res.salaire_max %></td>
                                <td><%= res.statuts %></td>
                                <td><%= res.name %></td>
                                <td><%= res.pays %></td>
                              </tr>
                            <% }) %>
                      </table>
                </div>

            </div>
            <div class="right-side-main">
                <div class="right-side-filters">
                    <div class="title-search">
                        <h2>Filtrez votre recherche</h2>
                    </div>
                        <input placeholder="Poste..." class="search-input-leftside " type="text">

                        <input placeholder="Entreprise..." class="search-input-leftside " type="text">

                        <input placeholder="Ville..." class="search-input-leftside " type="text">

                        <input placeholder="Salaire..." class="search-input-leftside " type="number">
                        <div class="main-form-wrapper-buttons">
                            <input  class="search-input-leftside " type="button" value="récents">
                            <input  class="search-input-leftside " type="button" value="anciens">
                        </div>
                </div>
            </div>
        </div>
        

    </body>
</html>