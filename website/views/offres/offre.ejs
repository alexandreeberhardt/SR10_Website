<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="/stylesheets/offre.css" rel="stylesheet" type="text/css" />
        <title><%= title %></title>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
           $(document).ready(function() {
                function filterRows() {
                    let searchValue = $('.search-input').val().toLowerCase();
                    let posteFilter = $('.search-input-leftside:eq(0)').val().toLowerCase();
                    let entrepriseFilter = $('.search-input-leftside:eq(1)').val().toLowerCase();
                    let paysFilter = $('.search-input-leftside:eq(2)').val().toLowerCase();
                    let salaireFilter = $('.search-input-leftside:eq(3)').val();

                    $("#offreTable tr").each(function(index) {
                        if(index!== 0) { 
                            let $row = $(this);
                            let showRow = true;

                            let intitule = $row.find("td:eq(0)").text().toLowerCase();
                            let organisation = $row.find("td:eq(5)").text().toLowerCase();
                            let pays = $row.find("td:eq(6)").text().toLowerCase();
                            let salaireMin = parseInt($row.find("td:eq(2)").text());

                            let specificFiltersMatch =
                                (!posteFilter || intitule.indexOf(posteFilter)!== -1) &&
                                (!entrepriseFilter || organisation.indexOf(entrepriseFilter)!== -1) &&
                                (!paysFilter || pays.indexOf(paysFilter)!== -1) &&
                                (!salaireFilter || salaireMin >= salaireFilter);

                            if (!(posteFilter || entrepriseFilter || paysFilter || salaireFilter) || specificFiltersMatch) {
                                let cellsText = $row.text().toLowerCase();
                                showRow = cellsText.indexOf(searchValue)!== -1;
                            } else {
                                showRow = false; 
                            }

                            $row.toggle(showRow);
                        }
                    });
                }

                $(".search-input,.search-input-leftside").on('keyup change', function() {
                    filterRows();
                });

                filterRows();
            });
            </script>
            
    </head>
    <body>
        <div class="topbar">
            <div class="left-side">

                <a class="link-wrapper link" href="" >
                    <div class="button button-home">
                        <img class="img-topbar"  src="/images/home.png">
                        <p>Home</p>
                    </div>
                </a>
            
            </div>
            <div class="right-side">
                <a class="link" href="/users/candidatures">
                    <div class="button button-candidat">
                        <img class="img-topbar" src="/images/candidatures.png">
                        <p>Mes candidatures</p>
                    </div>
                </a>
                <a class="link" href="/users/account">
                    <div class="button account">
                        <img class="img-topbar" src="/images/account.png">
                        <p>Mon compte</p>
                    </div>
                </a>
                
            </div>
        </div>
        <div class="main-page">
            <div class="left-side-main">
                <div class="header-left-side">
                    <h1>Voir les offres</h1>
                    <h3>Cherchez les offres d'emploi pertinentes pour vous !</h3>
                    <input placeholder="Search..." class="search-input" type="text">
                    <br>
                    <table id="offreTable" class="Offre_table">
                        <tr>
                            <th class="offre_th">Intitule</th>
                            <th class="offre_th">Rythme de travail</th>
                            <th class="offre_th">Salaire min</th>
                            <th class="offre_th">Salaire max</th>
                            <th class="offre_th">MÃ©tier</th>
                            <th class="offre_th">Organisation</th>
                            <th class="offre_th">Pays</th>
                        </tr>
                        <% result.forEach((res)=> { %>
                            <tr class="row-clickable" onclick="location.href='/offres/<%= res.id_offre %>'" style="cursor:pointer;">
                                <td class="offre_row"><%= res.intitule %></td>
                                <td><%= res.rythme_travail %></td>
                                <td><%= res.salaire_min %></td>
                                <td><%= res.salaire_max %></td>
                                <td><%= res.statuts %></td>
                                <td><%= res.name %></td>
                                <td><%= res.pays %></td>
                            </tr>
                        <% }) %>
                    </table>
                    
                </div>

            </div>
            <div class="right-side-main">
                <div class="right-side-filters">
                    <div class="title-search">
                        <h2>Filtrez votre recherche</h2>
                    </div>
                        <input placeholder="Poste..." class="search-input-leftside " type="text">

                        <input placeholder="Entreprise..." class="search-input-leftside " type="text">

                        <input placeholder="Pays..." class="search-input-leftside " type="text">

                        <input placeholder="Salaire..." class="search-input-leftside " type="number">

                </div>
            </div>
        </div>
        

    </body>
</html>