<html>
    <head>
        <title><%= title %></title>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="/stylesheets/demande_recruteur.css" rel="stylesheet" type="text/css" />
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script>
            $(document).ready(function(){
                $("#a1").click(function(){
                    window.location.href = "apply_review.html";
                });
            });
            $(document).ready(function(){
                $("#a2").click(function(){
                    window.location.href = "apply_review.html";
                });
            });
            $(document).ready(function(){
                $("#a3").click(function(){
                    window.location.href = "apply_review.html";
                });
            });
        </script>
    </head>
    <body>
        <div class="topbar">
            <div class="left-side">
                <a class="link-wrapper link" href="/recruteur/home_recruteur" >
                    <div class="button button-home">
                        <img class="img-topbar"  src="../assets/home.png">
                        <p>Home</p>
                    </div>
                </a>
            
            </div>
            <div class="right-side">
                <a class="link" href="/recruteur/account_recruteur">
                    <div class="button account">
                        <img class="img-topbar" src="../assets/account.png">
                        <p>Mon compte</p>
                    </div>
                </a>   
            </div>
        </div>
        <div class="main-page">
            <div class="left-side-main">
                <div class="header-left-side">
                    <h1>Ajout de nouveaux recruteurs</h1>
                    <h3>Vous pouvez voir ci dessous les demandes en cours !</h3>
                    <input placeholder="Search..." class="search-input" type="text">
                    <br>
                    <table class="Offre_table">
                        <tr>
                          <th class="offre_th" class="offre_row" >Nom</th>
                          <th class="offre_th">Organisation</th>
                          <th class="offre_th">Date</th>
                          <th class="offre_th">Actions</th>
                        </tr>
                        <% result.forEach((res)=> { %>
                        <tr>
                          <td class="offre_row"><%= res.prenom %> <%= res.nom %></td>
                          <td><%= res.intitule %></td>
                          <td><%= res.date_candidature %></td>
                          <td>
                            <div class="actions-wrapper">
                                <button class="actions">
                                    <img class="img-actions" src="../assets/check.png">
                                </button>
                                <button class="actions">
                                    <img class="img-actions" src="../assets/false.png">
                                </button>
                            </div>
                        </td>
                        </tr>
                        <% }) %>
                        
                       
                      </table>
                </div>

            </div>
            <div class="right-side-main">
                <div class="header-left-side">
                    <h1>Gestion des candidatures</h1>
                    <h3>Vous pouvez voir ci dessous les candidatures en cours !</h3>
                    <input placeholder="Search..." class="search-input" type="text">
                    <br>
                    <table class="Offre_table" >
                        <tr >
                          <th class="offre_th" class="offre_row" >Nom</th>
                          <th class="offre_th">Organisation</th>
                          <th class="offre_th">Date</th>
                        </tr>
                        <% result.forEach((res)=> { %>
                        <tr class="row-clickable" id="a1">
                            <td class="offre_row"><%= res.prenom %> <%= res.nom %></td>
                            <td><%= res.intitule %></td>
                            <td><%= res.date_candidature %></td>

                        </tr>
                        <% }) %>
                      </table>
                </div>
            </div>  
        </div>
        

    </body>
</html>