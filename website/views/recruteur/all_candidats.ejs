<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="/stylesheets/offre.css" rel="stylesheet" type="text/css">
    <title>Liste des candidats</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>
    <div class="topbar">
        <div class="left-side">
            <a class="link-wrapper link" href="/">
                <div class="button button-home">
                    <img class="img-topbar" src="/images/home.png">
                    <p>Home</p>
                </div>
            </a>
        </div>
        <div class="right-side">
            <% if (role === 'Recruteur') { %>
                <a class="link" href="/recruteur/account_recruteur">
                    <div class="button button-candidat">
                        <img class="img-topbar" src="/images/recruteur.png">
                        <p>Recruteur</p>
                    </div>  
                </a>
            <% } %>
            <a class="link" href="/users/candidatures">
                <div class="button button-candidat">
                    <img class="img-topbar" src="/images/candidatures.png">
                    <p>Mes candidatures</p>
                </div>
            </a>
            <a class="link" href="/users/account">
                <div class="button account">
                    <img class="img-topbar" src="/images/account.png">
                    <p>Mon compte</p>
                </div>
            </a>
        </div>
    </div>
    <div class="main-page">
        <div class="left-side-main">
            <div class="header-left-side">
                <h1>Voir les offres</h1>
                <h3>Cherchez les offres d'emploi pertinentes pour vous !</h3>
                <input placeholder="Search..." class="search-input" type="text">
                <br>
                <table class="Offre_table">
                    <thead>
                        <tr>
                            <th class="offre_th">Email</th>
                            <th class="offre_th">Nom</th>
                            <th class="offre_th">Prénom</th>
                            <th class="offre_th">Téléphone</th>
                            <th class="offre_th">Offre</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% candidats.forEach((res) => { %>
                        <tr>
                            <td class="offre_row"><%= res.email %></td>
                            <td><%= res.nom %></td>
                            <td><%= res.prenom %></td>
                            <td><%= res.tel %></td>
                            <td><%= res.offre %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <br>
            </div>
        </div>
        
        <div class="right-side-main">
            <div class="right-side-filters">
                <div class="title-search">
                    <h2>Filtrez votre recherche</h2>
                </div>
                <input placeholder="Poste..." class="search-input-leftside" type="text">
                <input placeholder="Entreprise..." class="search-input-leftside" type="text">
                <input placeholder="Ville..." class="search-input-leftside" type="text">
                <input placeholder="Salaire..." class="search-input-leftside" type="number">
                <div class="main-form-wrapper-buttons">
                    <input class="search-input-leftside" type="button" value="récents">
                    <input class="search-input-leftside" type="button" value="anciens">
                </div>
            </div>
        </div>
    </div>
</body>
</html>
